OgrNo = input('Lütfen Öğrenci Numaranızı Giriniz.\n');
if OgrNo == 0 
    RastgeleHarf = randi(3);
    if RastgeleHarf == 1 
        RastgeleHarf = 'X';
    end
    if RastgeleHarf == 2 
        RastgeleHarf = 'W';
    end
    if RastgeleHarf == 3 
        RastgeleHarf = 'Q';
    end
end
